{
  "name": "reality-website",
  "version": "1.0.0",
  "description": "Reality website",
  "author": "Mark van Duijker <mark@duyker.nl>",
  "dependencies": {
    "autoprefixer": "^6.5.1",
    "contentful": "^3.7.0",
    "copyfiles": "^1.0.0",
    "cssnano": "^3.8.0",
    "dotenv": "^2.0.0",
    "download": "^5.0.2",
    "es6-promisify": "^5.0.0",
    "fs-extra": "^0.30.0",
    "html-minifier": "^3.1.0",
    "imagemin": "^5.2.2",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-optipng": "^5.2.1",
    "imagemin-svgo": "^5.2.0",
    "linkify-it": "^2.0.2",
    "lodash": "^4.16.4",
    "markdown-it": "^8.0.1",
    "markdown-it-anchor": "^2.5.0",
    "markdown-it-emoji": "^1.3.0",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-footnote": "^3.0.1",
    "moment": "^2.15.2",
    "netlify-cli": "^1.1.0",
    "node-sass": "^3.10.1",
    "postcss": "^5.2.5",
    "postcss-cli": "^2.6.0",
    "postcss-inline-svg": "^2.2.0",
    "proxyquire": "^1.7.10",
    "pug": "^2.0.0-beta6",
    "reading-time": "^1.1.0",
    "rimraf": "^2.5.4",
    "skeleton-scss": "^2.0.4",
    "write-json-file": "^2.0.0"
  },
  "devDependencies": {
    "debug": "^2.2.0",
    "http-server": "^0.9.0",
    "live-reload": "^1.1.0",
    "nyc": "^8.3.2",
    "parallelshell": "^2.0.0",
    "standard": "^8.4.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "watch": "^1.0.1"
  },
  "scripts": {
    "test": "npm run lint && tape 'test/**/*.js' | tap-spec",
    "test-with-coverage": "nyc npm test",
    "clean": "rimraf public",
    "build:static": "copyfiles -u 2 'site/static/**/*' public",
    "build:site": "./bin/build",
    "build:css": "node-sass site/sass -o public/assets/styles && postcss --use autoprefixer --use postcss-inline-svg public/assets/styles/*.css -r",
    "build:minify": "postcss --use cssnano public/assets/styles/*.css -r && html-minifier --input-dir public --output-dir public --minify-css --minify-js --case-sensitive --file-ext html",
    "build:le": "rimraf 'public/.well-known'",
    "build": "npm run build:static && npm run build:site && npm run build:css && npm run build:le",
    "sync-content": "./bin/sync-contentful",
    "watch": "watch 'npm run build' site",
    "serve": "http-server -p 9090 public/",
    "live-reload": "live-reload --port 9091 public/",
    "dev": "parallelshell \"npm run live-reload -s\" \"npm run serve -s\" \"npm run watch -s\"",
    "lint": "standard \"bin/*\" \"lib/**/*.js\" \"test/**/*.js\" \"site/static/assets/js/**/*.js\"",
    "deploy:test": "NODE_ENV=prod BASE_URL='https://reality-new.surge.sh' npm run build && npm run build:minify && echo \"User-agent: *\nDisallow: /\n\" > public/robots.txt && surge public reality-new.surge.sh",
    "gitlab:deploy:production": "npm run build && npm run build:minify && netlify deploy -p public -s $NETLIFY_SITE_ID -t $NETLIFY_API_KEY"
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "check-coverage": false
  }
}
