{
  "name": "reality-website",
  "version": "1.0.0",
  "description": "Reality website",
  "dependencies": {
    "es6-promisify": "4.1.0",
    "imagemin-optipng": "5.1.1",
    "lodash": "4.14.0",
    "postcss": "5.1.1",
    "pug": "2.0.0-beta4",
    "rimraf": "2.5.4",
    "skeleton-scss": "^2.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "contentful": "^3.3.11",
    "copyfiles": "^1.0.0",
    "cssnano": "^3.7.0",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "download": "^5.0.2",
    "fs-extra": "^0.30.0",
    "html-minifier": "3.0.1",
    "http-server": "^0.9.0",
    "imagemin": "^5.2.2",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-optipng": "^5.1.0",
    "imagemin-svgo": "^5.1.0",
    "jimp": "^0.2.24",
    "jshint": "^2.9.2",
    "linkify-it": "^2.0.0",
    "live-reload": "^1.1.0",
    "lodash": "^4.13.1",
    "lowdb": "^0.13.1",
    "markdown-it": "^7.0.0",
    "markdown-it-anchor": "2.5.0",
    "markdown-it-emoji": "^1.2.0",
    "markdown-it-external-links": "^0.0.5",
    "node-sass": "^3.7.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "postcss-inline-svg": "^2.0.1",
    "pug": "^2.0.0-beta3",
    "rimraf": "^2.5.2",
    "watch": "^0.19.1"
  },
  "scripts": {
    "clean": "rimraf public",
    "build:static": "copyfiles -u 2 'site/static/**/*' public",
    "build:site": "./bin/build",
    "build:css": "node-sass site/sass -o public/assets/styles && postcss --use autoprefixer --use postcss-inline-svg public/assets/styles/*.css -r",
    "build:minify": "postcss --use cssnano public/assets/styles/*.css -r && html-minifier --input-dir public --output-dir public --minify-css --minify-js --case-sensitive --file-ext html",
    "build": "npm run build:static && npm run build:site && npm run build:css",
    "sync-content": "./bin/sync-contentful",
    "watch": "watch 'npm run build' site",
    "serve": "http-server -p 9090 public/",
    "live-reload": "live-reload --port 9091 public/",
    "dev": "parallelshell \"npm run live-reload -s\" \"npm run serve -s\" \"npm run watch -s\"",
    "lint": "jshint lib/**",
    "deploy:test": "NODE_ENV=prod BASE_URL='https://reality-new.surge.sh' npm run build && npm run build:minify && echo \"User-agent: *\nDisallow: /\n\" > public/robots.txt && surge public reality-new.surge.sh"
  },
  "author": "Mark van Duijker <mark@duyker.nl>"
}
