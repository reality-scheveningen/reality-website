doctype html
html(lang="nl")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible",content="ie=edge")
    title #{title}
    meta(name="description",content=metaDescription)
    meta(name="keywords",content=metaKeywords)
    meta(name="viewport",content="width=device-width, initial-scale=1")

    link(rel="canonical",href=canonicalUrl)

    link(href="https://fonts.googleapis.com/css?family=EB+Garamond|Open+Sans:400,300",rel="stylesheet",type="text/css")

    block styles
      link(rel="stylesheet",href="/assets/styles/main.css")

  body

    block header
      header
        .container
          .row
            .column
              a(href="/",title="Home")
                img(src="/assets/images/logo-vert.jpg",width="192",height="107",alt="Reality Scheveningen")

    block nav
      div
        nav.main-nav
          each menuTitle, menuPath in {'activiteiten':'Activiteiten', 'over-ons': 'Over ons', 'stories': 'Stories'}
            if menuPath == path
              div= menuTitle
            else
              a(href="/" + menuPath)= menuTitle

    block content

    block footer
      footer
        .contact
          .container
            .row
              h1 Een keertje langs komen, bakkie doen of meer weten?

          .container.squeezed
            .row
              .six.columns
                a(href="https://www.google.nl/maps/place/Kranenburgweg+204,+2583+ER+Den+Haag/@52.0957914,4.2606684,17z/data=!3m1!4b1!4m2!3m1!1s0x47c5b092fe85fe99:0x1384c908ba3f7c8d",target="_blank",rel="noopener noreferrer",title="Open in Google Maps")
                  img(src="/assets/images/map.png",class="map")

              .six.columns
                p
                  | Iedere zondag komen wij samen
                  br
                  | 10.30 uur Kranenburgweg 204
                  br
                  | in Scheveningen

        .copyright
          .container
            .row
              .arrow-up
              img(src="/assets/images/logo-no-text-black.jpg",width="58",height="56",alt="Reality Scheveningen")
            .row
              p
                small
                  | Â© Copyright #{(new Date()).getFullYear()}, Reality Scheveningen
                  br
                  a(href="mailto:contact@realityscheveningen.nl") contact@realityscheveningen.nl
                  |  | Postbus 84348 2508AH, Den Haag |&nbsp;
                  a(href="/anbi-informatie") ANBI informatie

    block scripts
      if env == 'dev'
        script.
            document.write(
            '<script src="http://' + (location.host || 'localhost').split(':')[0] +
            ':9091/livereload.js?snipver=1"></' + 'script>')

            console.log(!{debugData})

      script.
        window.ga = function() {
          ga.q.push(arguments)
        };ga.q = [];ga.l = +new Date;
        ga('create', '!{gaTrackingCode}', 'auto');ga('send', 'pageview')

      script(src="https://www.google-analytics.com/analytics.js",async,defer)
      script(src="//cdn.embedly.com/widgets/platform.js",charset="UTF-8",async)
