                  include ../static/assets/images/icon-contact.svg
                p
                  | Kerk zijn doen we niet alleen op zondag. Zie onze&nbsp;
                  a(id="agenda",href="#agenda-open") Agenda
                  |  voor meer informatie.
              .info-box.contact-information
                i
                  include ../static/assets/images/icon-kids.svg
                p
                  a(href="mailto:contact@reality-scheveningen.nl") contact@reality-scheveningen.nl
                  br
                  |  Postbus 84348
                  br
                  | 2508AH, Den Haag
              .info-box.social-media
                i
                  include ../static/assets/images/icon-share.svg
                p
                  a(href="https://www.facebook.com/RealityScheveningen/",title="Reality Scheveningen Facebook pagina",target="_blank",class="facebook-logo",rel="noopener noreferrer")
                    span.facebook
                      include ../static/assets/images/facebook.svg

        .copyright
          .container
            .row
              img(src="/assets/images/logo-reality-icon.svg",width="40",height="40",alt="Reality Scheveningen")
            .row
              p
                small
                  | Â© Copyright #{(new Date()).getFullYear()}, Reality Scheveningen
                  br
                  a(href="mailto:contact@realityscheveningen.nl") contact@realityscheveningen.nl
                  |  | Postbus 84348 2508AH, Den Haag |&nbsp;
                  a(href="/anbi") ANBI informatie

    #agenda-open
      a(href="#agenda") Sluiten
      h1 Reality Agenda
      noscript
        iframe(src="https://calendar.google.com/calendar/hosted/realityscheveningen.nl/embed?showTitle=0&showPrint=0&showCalendars=0&showTz=0&height=600&wkst=2&bgcolor=%23FFFFFF&src=realityscheveningen.nl_dt43iuoak13h4ioo00vi13g1bk@group.calendar.google.com&color=%23BE6D00&ctz=Europe/Amsterdam",style="border-width:0",width="100%",height="90%",frameborder="0",scrolling="no")
    block scripts
      if env == 'dev'
        script.
          document.write(
          '<script src="http://' + (location.host || 'localhost').split(':')[0] +
          ':9091/livereload.js?snipver=1"></' + 'script>')

          console.log(!{debugData})

      script.
        (function () {
          var renderedAgenda = false;

          var renderAgenda = function () {
            if (renderedAgenda) return;

            if (window.location.hash == '#agenda-open') {
              var el = document.getElementById('agenda-open');
              var html = el.querySelectorAll('noscript')[0].innerText;
              el.innerHTML = el.innerHTML + html;

              renderedAgenda = true;
            }
          };

          renderAgenda();

          window.onhashchange = function() {
            renderAgenda();
          }

          window.onkeyup = function(event) {
            if (window.location.hash == '#agenda-open') {
              var key = event.key;

              if (key == 'Escape') {
                window.location = '#agenda';
              }
            }
          }
        })();

